{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "lib/prisma.js",
        "app/(main)/dashboard/_components/budget-progress.jsx",
        "app/(main)/dashboard/_components/transaction-overview.jsx",
        "app/(main)/transaction/_components/recipt-scanner.jsx",
        "app/(main)/transaction/_components/transaction-form.jsx",
        "app/(main)/transaction/create/page.jsx",
        "app/(main)/dashboard/page.jsx",
        "app/(main)/account/_components/transaction-table.jsx",
        "next.config.mjs",
        "middleware.js",
        "app/layout.js",
        "app/(main)/dashboard/_components/transaction-table.jsx",
        "app/(main)/dashboard/_components/transaction-card.jsx",
        "app/(main)/dashboard/_components/transaction-list.jsx",
        "app/(main)/dashboard/_components/transaction-filter.jsx",
        "app/(main)/dashboard/_components/transaction-sort.jsx",
        "app/(main)/dashboard/_components/transaction-search.jsx",
        "app/(main)/dashboard/_components/budget-card.jsx",
        "app/(main)/dashboard/_components/budget-list.jsx",
        "app/(main)/dashboard/_components/budget-filter.jsx",
        "app/(main)/dashboard/_components/budget-sort.jsx",
        "app/(main)/dashboard/_components/budget-search.jsx",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".next/types/**/*.ts",
        "app/**/*",
        "components/**/*",
        "lib/**/*",
        "actions/**/*",
        "hooks/**/*",
        "data/**/*",
        "emails/**/*",
        "prisma/**/*",
        "next.config.mjs",
        "middleware.js"
    ],
    "exclude": [
        "node_modules"
    ]
}